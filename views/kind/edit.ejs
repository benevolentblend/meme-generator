<h2 class="page-header">Edit Kind</h2>
<form class="form-horizontal" action="/kind/<%= kind.id%>/update" method="post">
  <fieldset>
    <div class="form-group">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="name" value="<%= kind.name %>">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">URL</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="url" value="<%= kind.url %>">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <input class="btn btn-primary" type="submit" value="Update">
      </div>
    </div>
  </fieldset>
</form>
