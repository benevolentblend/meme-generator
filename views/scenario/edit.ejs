<h2 class="page-header">Edit Scenario</h2>
<form class="form-horizontal" action="/scenario/<%= scenario.id %>/update" method="post">
  <fieldset>
    <div class="form-group">
      <label class="col-sm-2 control-label">Value</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="value" value="<%= scenario.value %>">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <input class="btn btn-primary" type="submit" value="Update">
      </div>
    </div>
  </fieldset>
</form>
